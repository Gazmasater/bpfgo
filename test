struct sys_enter_recvfrom_args {
    unsigned short common_type;           
    unsigned char common_flags;           
    unsigned char common_preempt_count;   
    int common_pid;                       
    int __syscall_nr;                     
    int pad1;                            
    int fd;  
    int pad2;                
    void *ubuf;              
    size_t size;             
    unsigned int flags;      
    int pad3;                            
    struct sockaddr *addr;   
    int *addr_len;           
} ;