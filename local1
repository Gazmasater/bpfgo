#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <sys/socket.h>
#include <arpa/inet.h>
#include <unistd.h>

int main() {
    int sock;
    struct sockaddr_in remote_addr, local_addr;
    socklen_t addr_len = sizeof(local_addr);

    //Создание сокета
    sock = socket(AF_INET, SOCK_STREAM, 0);
    if (sock < 0) {
        perror("Socket creation failed");
        return -1;
    }


    printf("sock: %d\n", sock);


    // Удаленный адрес
    memset(&remote_addr, 0, sizeof(remote_addr));
    remote_addr.sin_family = AF_INET;
    remote_addr.sin_port = htons(4444); // Используем порт 80 для примера
    if (inet_pton(AF_INET, "192.168.1.71", &remote_addr.sin_addr) <= 0) { // Пример удаленного IP
        perror("Invalid remote address");
        return -1;
    }

    // Соединяемся с удаленным адресом
    if (connect(sock, (struct sockaddr *)&remote_addr, sizeof(remote_addr)) < 0) {
        perror("Connect failed");
        return -1;
    }

    // Получаем локальный адрес, используемый для соединения
    if (getsockname(sock, (struct sockaddr *)&local_addr, &addr_len) == -1) {
        perror("getsockname failed");
        return -1;
    }

    // Выводим локальный IP-адрес и порт
    char local_ip[INET_ADDRSTRLEN];
    inet_ntop(AF_INET, &local_addr.sin_addr, local_ip, sizeof(local_ip));
    printf("Local IP address: %s\n", local_ip);
    printf("Local port: %d\n", ntohs(local_addr.sin_port));

    close(sock);
    return 0;
}